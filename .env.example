# ===============================================================
#    SwapMyBytes Environment Variables Template
# ===============================================================
#
# Dies ist eine Vorlage. Kopiere sie nach .env und fülle die
# leeren Secret-Werte aus. Gib NIEMALS die .env-Datei weiter!

# ------------------------ MongoDB Database ------------------------

SMB_MONGO_DBNAME=swapmybytes
SMB_MONGO_PORT_INTERNAL=27017
SMB_MONGO_PORT_EXTERNAL=5100
SMB_MONGO_SERVICE_LOCATION=db

SMB_MONGOEXPRESS_PORT_INTERNAL=8081
SMB_MONGOEXPRESS_PORT_EXTERNAL=5101

# ------------------------ Backend ------------------------

SMB_BACKEND_PORT_INTERNAL=5090
SMB_BACKEND_PORT_EXTERNAL=5090

# ------------------------ SECRETS ------------------------
# WICHTIG: Generiere hierfür eigene, zufällige Zeichenketten für dein lokales Setup.
# Diese Werte dürfen NIEMALS in Git eingecheckt werden.
SMB_PRIVATE_KEY_ACCESS_TOKEN=
SMB_PRIVATE_KEY_REFRESH_TOKEN=

# ---------------------------------------------------------

SMB_IN_PRODUCTION=false
SMB_BACKEND_POPULATE=false

# ------------------------ React Frontend ------------------------

SMB_FRONTEND_PORT_INTERNAL=80
SMB_FRONTEND_PORT_EXTERNAL=5080

# ------------------------ Frontend VITE Ports ------------------------

VITE_BACKEND_LOCATION=127.0.0.1:5090
VITE_HOST=127.0.0.1
VITE_PORT=5080

# ------------------------ Google OAuth ------------------------
SMB_CLIENT_ID=
SMB_CLIENT_SECRET=